@page "/timercounter"
@attribute [StreamRendering]

<h3>Timer Counter</h3>
<p> @count </p>

@code {
    private int count;

    protected override async Task OnInitializedAsync()
    {
        for(var i = 0; i < 10; i++)
        {
            await Task.Delay(1000);
            count = i;
            StateHasChanged();
        }
    }
}
